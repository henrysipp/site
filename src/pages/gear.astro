---
import SidebarLayout from '../layouts/SidebarLayout.astro';
import Heading from '../components/Heading.astro';
import Text from '../components/Text.astro';
import Subheading from '../components/Subheading.astro'
---

<SidebarLayout title="Gear" description="The tools and equipment I use">
	<Heading>Gear</Heading>
	<Subheading class="mt-2">Things I use and like</Subheading>
	<div class="mt-8 space-y-8">
		<section>
			<Text emphasized class="mb-4">Computer</Text>
			<ul class="space-y-2">
				<Text size="sm" class="list-item">Framework Laptop 16</Text>
				<Text size="sm" class="list-item">32GB RAM</Text>
				<Text size="sm" class="list-item">1TB SSD</Text>
			</ul>
		</section>

		<section>
			<Text emphasized class="mb-4">Peripherals</Text>
			<ul class="space-y-2">
				<Text size="sm" class="list-item">Mechanical Keyboard</Text>
				<Text size="sm" class="list-item">Logitech MX Master 3</Text>
				<Text size="sm" class="list-item">27" 4K Monitor</Text>
			</ul>
		</section>

		<section>
			<Text emphasized class="mb-4">Software</Text>
			<ul class="space-y-2">
				<Text size="sm" class="list-item">VS Code</Text>
				<Text size="sm" class="list-item">Firefox</Text>
				<Text size="sm" class="list-item">Obsidian</Text>
			</ul>
		</section>
	</div>
</SidebarLayout>
