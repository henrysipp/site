---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  emphasized?: boolean;
  class?: string;
}

const { size = 'md', emphasized = false, class: className } = Astro.props;

const sizeClasses = {
  sm: 'text-base/6',
  md: 'text-lg/7',
  lg: 'text-xl/8 sm:text-2xl/9',
};
---

<div
  class:list={[
    sizeClasses[size],
    'text-secondary',
    emphasized && 'font-semibold text-primary',
    className,
  ]}
>
  <slot />
</div>